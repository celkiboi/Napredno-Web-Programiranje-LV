doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      a(href='/') Home
      |  | 
      if user 
        a(href='/projects') Projects
        |  | 
        a(href='/projects/archive') Archive
        |  | 
        a(href='/logout') Logout (#{user.username})
      else
        a(href='/login') Login
        |  | 
        a(href='/register') Register
    br
    br
    if message
      if message.error
        p(style="color:red") #{message.error}
      if message.info
        p(style="color:green") #{message.info}
    block content
