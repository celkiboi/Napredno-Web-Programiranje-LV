extends layout

block content
  h1 Login
  if message && message.error
    p(style="color:red") #{message.error}
  form(method="post", action="/login")
    div
      label Username:
      input(type="text", name="username")
    div
      label Password:
      input(type="password", name="password")
    div
      input(type="submit", value="Login")
